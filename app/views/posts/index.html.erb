<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
      <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">Landing a great job</h1>
        <p class="lead font-weight-normal">Has never been easier</p>
        <a class="btn btn-outline-secondary" href="#jobs">Let's Get Started</a>
      </div>
      <div class="product-device box-shadow d-none d-md-block"></div>
      <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
</div>
<br>
<hr>
<br>
<h1 class="display-6 recent-job-listings" id="jobs">Recent Job Listings</h1>


<% @posts.each_slice(3) do |post| %>
  <div class="row mb-2">
    <% post.each do |post| %>
      <div class="col-12">
        <div class="card box-shadow mb-4 h-md-250">
          <strong class="d-inline-block mb-2 text-success"><%= post.location %></strong>
          <h3 class="mb-0">
            <a class="text-dark" href="#"><%=link_to truncate(post.title, :length => 55), post, :class => 'text-dark' %></a>
          </h3>
          <div class="mb-1 text-muted"><%= post.created_at.strftime("%B, %d, %Y") %></div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>


<%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
