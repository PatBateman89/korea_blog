<div class="form-group">
  <%= form_for @post do |f| %>
    <% if @post.errors.any? %>
      <div id="erros" class="errors">
        <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving</h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div class="form-group">
      <%= f.label :title, "Job Title" %>
      <%= f.text_field :title, :class => "form-control", :placeholder => "Job Title" %>
    </div>

    <div class="form-group">
      <%= f.label :location, "Location" %>
      <%= f.text_field :location, :class => "form-control", :placeholder => "" %>
    </div>

    <div class="form-group">
      <%= f.label :body, "Job Description" %>
      <%= f.text_area :body, :class => "form-control", :rows => "8" %>
    </div>

    <div class="form-group">
      <%= f.label :company, "Name Of Company" %>
      <%= f.text_field :company, :class => "form-control", :placeholder => "" %>

    <div class="form-group">
      <%= f.label :start_date, "Start Date" %>
      <%= f.text_field :start_date, :class => "form-control", :placeholder => "" %>
    </div>

    <div class="form-group">
      <%= f.label :working_times, "Scheduled Work Hours" %>
      <%= f.text_field :working_times, :class => "form-control", :placeholder => "" %>
    </div>

    <div class="form-group">
      <%= f.label :pay, "Salary" %>
      <%= f.text_field :pay, :class => "form-control", :placeholder => "" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "Email" %>
      <%= f.text_field :email, :class => "form-control", :placeholder => "" %>
    </div>

    <div class="form-group">
      <%= f.label :phone, "Phone Number" %>
      <%= f.text_field :phone, :class => "form-control", :placeholder => "" %>
    </div>

    <p>
      <%= f.submit "Submit", :class => "btn btn-primary" %>
    </p>

  <% end %>
</div>
