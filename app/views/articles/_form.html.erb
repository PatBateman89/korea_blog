<%= form_for @article, html: { multipart: true }  do |f| %>

  <div class="columns is-centered">
    <div class="column is-half">

    <% unless @article.user_shot.blank? %>
    <%= image_tag (@article.user_shot_url), id: "previewImage" %>
    <% end %>


    <output id="list"></output>
    <div id="drop_zone">Drag your article's image here</div>
    <br />

    <%= f.file_field :user_shot, label: false, :class => "form-control-file", wrapper: false, label_html: { class: "file-label" } %>



    <div class="field">
      <div class="control">
      	<%= f.label :title, label: "Title"%>
        <%= f.text_field :title, :class => "form-control", :placeholder => "Article Title" %>
      </div>
    </div>

    <div class="field">
    	<div class="control">
      	<%= f.label :description, :class => "my-3"%>
        <%= f.text_area :description, :class => "form-control", :placeholder => "Article Body" %>
      </div>
    </div>

    <div class="field">
    	<div class="control">
        <p>
      	 <%= f.submit "Submit", :class => "mt-3 btn btn-primary" %>
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>
