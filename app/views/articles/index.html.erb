
<% @articles.each_slice(2) do |articles| %>
<div class="row">
  <% articles.each do |article| %>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
    <div class="card flex-md-row mb-4 shadow-sm h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <strong class="d-inline-block mb-2 text-primary">Article</strong>
        <h3 class="mb-0">
          <a class="text-dark" href="#"><%= link_to article.title, article %></a>
        </h3>
        <div class="mb-1 text-muted"><%= article.created_at.strftime("%B, %d, %Y") %></div>
        <p class="card-text mb-auto"><%= truncate(article.description, :length => 50) %></p>
        <a href="#"><%= link_to "Continue Reading...", article %></a>
      </div>
    <%= image_tag( article.user_shot_url, :class => "article-bg") %>
  </div>
</div>
<% end %>
</div>
<% end %>


<%= will_paginate @articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
